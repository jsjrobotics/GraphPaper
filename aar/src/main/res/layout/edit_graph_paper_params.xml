<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/increase_size"
        android:text="@string/increase_size"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/decrease_size"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/save_sketches"
        android:text="@string/save_sketches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/increase_size"/>

    <Button
        android:id="@+id/clear_sketches"
        android:text="@string/clear_sketches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/increase_size"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>